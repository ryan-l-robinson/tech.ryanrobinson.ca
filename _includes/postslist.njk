{%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %}
{%- css %}{% include "public/css/post-summaries.css" %}{% endcss %}
<div class="postlist">
{% for post in postslist | reverse %}
	<article class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		<h2><a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></h2>
		<p><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL d, yyyy") }}</time></p>
		{% if post.data.description %}<p class="article-description">{{ post.data.description }}</p>{% endif %}
	</article>
{% endfor %}
</div>
{% if page.data.series %}
	<aside class="sidebar-block" aria-label="Posts in this series">
		<h2>Posts in {{ page.data.series }} Series</h2>
		<ol class="series-list">
			{% for post in collections.posts | postsWithMetadata("series", "GitPod Drupal") %}
    			<li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
			{% endfor %}
		</ol>
	</aside>
{% endif %}